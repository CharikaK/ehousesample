@model Ehouse.Models.SignInModel

@if(!ViewContext.ModelState.IsValid)
{
<div asp-validation-summary="All" class="alert-danger"></div>
}
<form class="col-md-6" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["retunUri"]">
    <h2>Please sign in</h2>
    <label class="sr-only">Username:</label>
    <input type="text" class="form-control" placeholder="Username" asp-for="Username" />
    <label class="sr-only">Password:</label>
    <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
    <button class="btn btn-lg btn-primary btn-block">SignIn</button>

</form>